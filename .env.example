# Core server configuration
NODE_ENV=development
PORT=5000

# Database connection
# For local development, the Docker compose file provisions a Postgres instance with these credentials
DATABASE_URL=postgres://postgres:postgres@localhost:5432/lacrosselens
# DATABASE_CLIENT can be set to "neon" when using Neon serverless
DATABASE_CLIENT=pg

# Session and authentication
SESSION_SECRET=change-me-in-production

# Developer-authenticated session for local work. Leave USE_DEV_AUTH=false in production.
USE_DEV_AUTH=true
DEV_USER_ID=dev-user
DEV_USER_EMAIL=coach@lacrosselens.test
DEV_USER_FIRST_NAME=Dev
DEV_USER_LAST_NAME=Coach

# Third-party integrations
GEMINI_API_KEY=your-google-gemini-api-key
YOUTUBE_API_KEY=your-youtube-data-api-key

# Replit Auth settings (required only in hosted environments)
REPL_ID=your-replit-app-id
REPLIT_DOMAINS=your-app.replit.app
ISSUER_URL=https://replit.com/oidc
